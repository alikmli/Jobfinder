<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".com.example.stdjob.signup.SignupPage4Activity">




    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="نام و نام خانوادگی خود را وارد کنید "
        android:id="@+id/txt5"
        android:layout_marginTop="20dp"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:textColor="@color/colorPrimaryDark"
        android:gravity="right" />

    <EditText
        android:id="@+id/edtxt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt5"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="70dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/buttonpadding"
        android:gravity="right|center_vertical"
        android:padding="20dp"
        android:hint="نام ..." />

    <EditText
        android:id="@+id/edtxt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="نام خانوادگی ..."
        android:layout_below="@id/edtxt1"

        android:gravity="right|center_vertical"
        android:padding="20dp"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:background="@drawable/buttonpadding"/>
    <TextView
        android:id="@+id/alam3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginTop="80dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorPrimaryDark"
        android:textAlignment="center"
        android:layout_below="@+id/edtxt2"
        android:gravity="center"/>
    <Button
        android:id="@+id/btn5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginBottom="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="12dp"
        android:background="@drawable/buttonpadding2"
        android:text="بعدی"
        android:textColor="@color/icons"
        android:onClick="nextactivity4"
        android:padding="20dp"
        android:gravity="center"/>
</RelativeLayout>