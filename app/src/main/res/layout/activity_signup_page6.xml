<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".com.example.stdjob.signup.SignupPage6Activity">





    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="شماره تلفن خود را وارد کنید "
        android:id="@+id/txt6"
        android:layout_marginTop="20dp"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:textColor="@color/colorPrimaryDark"
        android:textAlignment="viewEnd"
        android:gravity="center"
        tools:ignore="RtlCompat"/>

    <EditText
        android:id="@+id/edtxt5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt6"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="70dp"
        android:layout_marginRight="12dp"
        android:inputType="phone"
        android:hint="شماره تلفن"
        android:background="@drawable/buttonpadding"
        android:layout_gravity="end"
        android:gravity="right|center_vertical"
        android:padding="20dp"/>
    <TextView
        android:id="@+id/alam5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginTop="80dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorPrimaryDark"
        android:textAlignment="center"
        android:layout_below="@+id/edtxt5"
        android:gravity="center"/>


    <Button
        android:id="@+id/btn7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginBottom="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="12dp"
        android:background="@drawable/buttonpadding2"
        android:text="بعدی"
        android:visibility="visible"
        android:textColor="@color/icons"
        android:padding="20dp"
        android:gravity="center"
        />
</RelativeLayout>